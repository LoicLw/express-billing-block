<!-- Live generated pricing page -->

<div class="card-deck text-center">

	<% for (let plan of locals.plans) { %>
		<div class="card mb-4 box-shadow">
			<div class="card-header">
				<h4 class="my-0 font-weight-normal"><%= plan.name %></h4>
			</div>
			<div class="d-flex flex-column justify-content-between card-body">
				<div class="py-3">
					<h1 class="card-title pricing-card-title">$<%= plan.price %> <small class="text-muted">/ mo</small></h1>
					<ul class="list-unstyled mt-3 mb-4">
						<% for (let item of plan.features) { %>	
							<li><%= item.title %></li>
						<% } %>
					</ul>
				</div>

				<div>
					<% if (plan.id === 'free') { %>
						<a href="/signup" class="btn btn-lg btn-block btn-outline-primary">Sign up</a>
					<% } else { %>
						<a href="/signup" class="btn btn-lg btn-block btn-primary">Sign Up</a>
					<% } %>
				</div>
			</div>
		</div>
	<% } %>

</div>
	